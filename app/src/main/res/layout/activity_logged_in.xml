<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7C6C6"
    tools:context=".LoggedIn">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Chatster"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/t0"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_below="@+id/t1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text=""
        android:textSize="30dp" />

    <TextView
        android:id="@+id/vis"
        android:layout_width="142dp"
        android:layout_height="49dp"
        android:layout_below="@+id/t0"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="58dp"
        android:text="Currently talking to"
        android:textSize="15dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/talkingTo"
        android:layout_width="163dp"
        android:layout_height="103dp"
        android:layout_below="@+id/t0"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="58dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/vis"
        android:text="Ankesh"
        android:textSize="15dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t0"
        android:paddingTop="40dp"
        android:text="Enter the username of the receiver?"
        android:textSize="20dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_below="@+id/t2"
        android:hint="Enter Username"
        android:visibility="visible" />


    <TextView
        android:id="@+id/messageBox"
        android:layout_width="266dp"
        android:layout_height="105dp"

        android:layout_below="@+id/vis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="19dp"
        android:background="#69696B"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/messageBox1"
        android:layout_width="236dp"
        android:layout_height="105dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/messageBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:background="#69696B"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/t2"
        android:layout_alignParentRight="true"
        android:text="Done"
        android:visibility="visible" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:hint="Enter Message"
        android:visibility="invisible"
         />


    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="54dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#4F4FB3"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_menu_send" />

</RelativeLayout>